server {
    listen 80;
    listen [::]:80;
    server_name {{ nginx_aptly_server_name }};

    root {{ nginx_aptly_root }};
    index index.html;

    location / {
        try_files $uri $uri/ =404;
        autoindex on;
        autoindex_exact_size off;
        autoindex_localtime on;
    }

    location ~ /\.ht {
        deny all;
    }

    location /upload {
        alias {{ aptly_home }}/upload;
        autoindex on;
        autoindex_exact_size off;
        autoindex_localtime on;
        
        location ~ ^/upload/(.+\.deb)$ {
            add_header Content-Disposition 'attachment; filename="$1"';
        }
    }

    access_log /var/log/nginx/aptly_access.log;
    error_log /var/log/nginx/aptly_error.log;
}